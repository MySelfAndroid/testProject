<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <ListView android:id="@+id/list"  
android:layout_weight="1" android:layout_height="match_parent" android:layout_width="match_parent"  />
     
     
      <RelativeLayout android:id="@+id/lv3"
         android:layout_weight="0"
         android:background="@color/orange"
         android:layout_height="40dp" android:layout_width="match_parent"
         
         >
         
         <TextView android:id="@+id/tv3"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:textSize="24sp"
             android:text="@string/howtoUse"
             android:layout_centerHorizontal="true"
             />
     
     </RelativeLayout>
     
    
     <RelativeLayout android:id="@+id/lv1"
         android:layout_weight="0"
         android:background="@color/yellor"
         android:layout_height="40dp" android:layout_width="match_parent"
         
         >
         
         <TextView android:id="@+id/tv1"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:textSize="24sp"
             android:text="@string/btn_ref"
             android:layout_centerHorizontal="true"
             />
     
     </RelativeLayout>
     
     <RelativeLayout android:id="@+id/lv2"
         android:layout_weight="0"
         android:background="@color/blue"
         android:layout_height="40dp" android:layout_width="match_parent"
         
         >
         
         <TextView android:id="@+id/tv2"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="@color/white"
             android:textSize="24sp"
             android:text="@string/btn_dl"
             android:layout_centerHorizontal="true"
             />
     
     </RelativeLayout>
     
     
     <com.google.ads.AdView android:id="@+id/adView"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a15349382ae325e"
                         ads:adSize="BANNER"
                         android:layout_marginTop="10dp"
                         android:layout_gravity="center"
                         android:layout_weight="0"
                         ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
                         ads:loadAdOnCreate="true"/>


</LinearLayout >